{
  "kubernetes": {
    "fileMatch": ["^deployment\\.yaml$"]
  },
  "packageRules": [
    {
      "managers": ["regex"],
      "paths": ["foo/*staging*/**"],
      "additionalBranchPrefix": "{{baseDir}}-",
      "commitMessageSuffix": "({{baseDir}})",
      "automerge": true
    },
    {
      "managers": ["regex"],
      "paths": ["foo/*production*/**"],
      "additionalBranchPrefix": "{{baseDir}}-",
      "commitMessageSuffix": "({{baseDir}})",
      "automerge": false
    },
    {
      "datasources": ["docker"],
      "packageNames": ["k8s.gcr.io/metrics-server/metrics-server"],
      "prBodyNotes": [
        "[compare](https://github.com/kubernetes-sigs/metrics-server/compare/{{currentVersion}}...{{newVersion}}), [Releases](https://github.com/kubernetes-sigs/metrics-server/releases)"
      ]
    },
    {
      "datasources": ["orb"],
      "packageNames": ["aws-ecr"],
      "prBodyNotes": [
        "[compare](https://github.com/CircleCI-Public/aws-ecr-orb/compare/v{{currentVersion}}...v{{newVersion}})"
      ]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.akoi\\.yml$"],
      "matchStrings": ["version: (?<currentValue>.*?) # renovate: depName=(?<depName>.*?)\\n"],
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": ["^kustomization\\.yaml$"],
      "matchStrings": ["- https://github.com/summerwind/actions-runner-controller/releases/download/(?<currentValue>.*?)/actions-runner-controller.yaml"],
      "depNameTemplate": "summerwind/actions-runner-controller",
      "datasourceTemplate": "github-releases"
    }
  ]
}

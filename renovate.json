{
  "packageRules": [
    {
      "paths": ["**staging**"],
      "additionalBranchPrefix": "{{baseDir}}-",
      "commitMessageSuffix": "({{baseDir}})",
      "automerge": true
    },
    {
      "paths": ["*production*"],
      "additionalBranchPrefix": "{{baseDir}}-",
      "commitMessageSuffix": "({{baseDir}})",
      "automerge": false
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.akoi\\.yml$"],
      "matchStrings": ["version: (?<currentValue>.*?) # renovate: depName=(?<depName>.*?)\\n"],
      "datasourceTemplate": "github-releases"
    }
  ]
}

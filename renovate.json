{
  "packageRules": [
    {
      "paths": ["*staging*"],
      "additionalBranchPrefix": "{{baseDir}}-",
      "commitMessageSuffix": "({{baseDir}})",
      "automerge": true
    },
    {
      "paths": ["*production*"],
      "additionalBranchPrefix": "{{baseDir}}-",
      "commitMessageSuffix": "({{baseDir}})",
      "automerge": false
    }
  ]
}

{
  "packageRules": [
    {
      "managers": ["regex"],
      "paths": ["foo.txt"],
      "reviewers": ["suzuki-shunsuke"]
    },
    {
      "managers": ["regex"],
      "paths": ["bar.txt"]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["foo.txt"],
      "matchStrings": ["ENV DOCKER_COMPOSE_VERSION (?<currentValue>.*?)\\n"],
      "depNameTemplate": "docker/compose",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": ["bar.txt"],
      "matchStrings": ["ARG KUSTOMIZE_VERSION=\"(?<currentValue>.*?)\"\\n"],
      "depNameTemplate": "kubernetes-sigs/kustomize",
      "datasourceTemplate": "github-releases"
    }
  ]
}

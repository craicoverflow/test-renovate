{
  "packageRules": [
    {
      "managers": ["regex"],
      "paths": ["foo/*staging*/**"],
      "additionalBranchPrefix": "{{baseDir}}-",
      "commitMessageSuffix": "({{baseDir}})",
      "automerge": true
    },
    {
      "managers": ["regex"],
      "paths": ["foo/*production*/**"],
      "additionalBranchPrefix": "{{baseDir}}-",
      "commitMessageSuffix": "({{baseDir}})",
      "automerge": false
    },
    {
      "datasources": ["docker"],
      "packageNames": ["metrics-server"],
      "prBodyNotes": [
        "[compare](https://github.com/kubernetes-sigs/metrics-server/compare/{{currentVersion}}...{{newVersion}}), [Releases](https://github.com/kubernetes-sigs/metrics-server/releases)"
      ]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.akoi\\.yml$"],
      "matchStrings": ["version: (?<currentValue>.*?) # renovate: depName=(?<depName>.*?)\\n"],
      "datasourceTemplate": "github-releases"
    }
  ]
}
